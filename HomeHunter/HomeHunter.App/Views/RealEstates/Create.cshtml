@model HomeHunter.Models.BindingModels.RealEstate.CreateRealEstateBindingModel
@using HomeHunter.Models.ViewModels.City
@using HomeHunter.Models.ViewModels.RealEstateType
@using HomeHunter.Models.ViewModels.BuildingType
@using HomeHunter.Models.ViewModels.HeatingSystem

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="paddingElement col-md-5 col-md-offset-3">
        <br />
        <h4>Информация за имота</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group w-50 mx-auto">
                <div class="text-left">
                    <label asp-for="RealEstateType">Тип на имота</label>
                    <span asp-validation-for="RealEstateType" class="text-danger"></span>
                </div>
                <select class="custom-select" id="realEstateType" asp-for="RealEstateType">
                    <option selected disabled>-- Изберете тип на имота --</option>
                    //Add
                    @foreach (var realEstateType in (List<RealEstateTypeViewModel>)this.ViewData["RealEstateTypes"])
                    {
                        <option>@realEstateType.TypeName</option>
                    }
                </select>
                <span asp-validation-for="RealEstateType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group w-50 mx-auto">
                <div class="text-left">
                    <label asp-for="City">Град</label>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <select class="custom-select" id="city" asp-for="City">
                    <option selected disabled>-- Изберете град --</option>
                    //Add
                    @foreach (var city in (List<CityViewModel>)this.ViewData["Cities"])
                    {
                        <option>@city.Name</option>
                    }
                </select>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group w-50 mx-auto">
                <div class="text-left">
                    <label asp-for="BuildingType">Тип на сградата</label>
                    <span asp-validation-for="BuildingType" class="text-danger"></span>
                </div>
                <select class="custom-select" id="buildingType" asp-for="BuildingType">
                    <option selected disabled>-- Изберете тип сграда --</option>
                    //Add
                    @foreach (var buildingType in (List<BuildingTypeViewModel>)this.ViewData["BuildingTypes"])
                    {
                        <option>@buildingType.Name</option>
                    }
                </select>
                <span asp-validation-for="BuildingType" class="text-danger"></span>
            </div>
          
            <div class="form-group w-50 mx-auto">
                <div class="text-left">
                    <label asp-for="HeatingSystem">Вид отопление</label>
                    <span asp-validation-for="HeatingSystem" class="text-danger"></span>
                </div>
                <select class="custom-select" id="heatingSystem" asp-for="HeatingSystem">
                    <option selected disabled>-- Изберете типа отопление --</option>
                    //Add
                    @foreach (var heatingSystem in (List<HeatingSystemViewModel>)this.ViewData["HeatingSystems"])
                    {
                        <option>@heatingSystem.Name</option>
                    }
                </select>
                <span asp-validation-for="HeatingSystem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FloorNumber" class="control-label"></label>
                <input asp-for="FloorNumber" class="form-control" />
                <span asp-validation-for="FloorNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuildingTotalFloors" class="control-label"></label>
                <input asp-for="BuildingTotalFloors" class="form-control" />
                <span asp-validation-for="BuildingTotalFloors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkingPlace" class="control-label"></label>
                <input asp-for="ParkingPlace" class="form-control" />
                <span asp-validation-for="ParkingPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Yard" class="control-label"></label>
                <input asp-for="Yard" class="form-control" />
                <span asp-validation-for="Yard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetroNearBy" class="control-label"></label>
                <input asp-for="MetroNearBy" class="form-control" />
                <span asp-validation-for="MetroNearBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balcony" class="control-label"></label>
                <input asp-for="Balcony" class="form-control" />
                <span asp-validation-for="Balcony" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CellingOrBasement" class="control-label"></label>
                <input asp-for="CellingOrBasement" class="form-control" />
                <span asp-validation-for="CellingOrBasement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <p>Полетата със * са задължителни!</p>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

