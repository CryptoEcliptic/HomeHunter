@model HomeHunter.Models.ViewModels.Offer.OfferDetailsViewModel;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link rel="stylesheet" href="~/lib/assets/modal_images.css">
<div class="row">
    <div class="col-md-6 details-real-estate-container">
        <br />
        <br />
        <h4 class="offset-3 home-hunter-center">Изтриване на обявата</h4>
        <table class="table table-estate-details table-responsive-md hover-table">
            <tbody>
                <tr>
                    <th class="col-md-2">@Html.DisplayNameFor(model => model.ReferenceNumber)</th>
                    <td class="col-md-2">@Html.DisplayFor(model => model.ReferenceNumber)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.OfferType)</th>
                    <td>@Html.DisplayFor(model => model.OfferType)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.City)</th>
                    <td>@Html.DisplayFor(model => model.City)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Neighbourhood)</th>
                    <td>@Html.DisplayFor(model => model.Neighbourhood)</td>
                </tr>
                @if (Model.Village != null)
                {
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Village)</th>
                        <td>@Html.DisplayFor(model => model.Village)</td>
                    </tr>
                }
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                    <td>@Html.DisplayFor(model => model.Address)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.RealEstateType)</th>
                    <td>@Html.DisplayFor(model => model.RealEstateType)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BuildingType)</th>
                    <td>@Html.DisplayFor(model => model.BuildingType)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Area)</th>
                    <td>@Html.DisplayFor(model => model.Area)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <td>@Html.DisplayFor(model => model.Price)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FloorNumber)</th>
                    <td>@Html.DisplayFor(model => model.FloorNumber)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BuildingTotalFloors)</th>
                    <td>@Html.DisplayFor(model => model.BuildingTotalFloors)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Year)</th>
                    <td>@Html.DisplayFor(model => model.Year)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.HeatingSystem)</th>
                    <td>@Html.DisplayFor(model => model.HeatingSystem)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ParkingPlace)</th>
                    <td>@Html.DisplayFor(model => model.ParkingPlace)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Yard)</th>
                    <td>@Html.DisplayFor(model => model.Yard)</td>
                </tr>
                @*<tr>
                    <th>@Html.DisplayNameFor(model => model.MetroNearBy)</th>
                    <td>@Html.DisplayFor(model => model.MetroNearBy)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Balcony)</th>
                    <td>@Html.DisplayFor(model => model.Balcony)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CellingOrBasement)</th>
                    <td>@Html.DisplayFor(model => model.CellingOrBasement)</td>
                </tr>*@
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Comments)</th>
                    <td>@Html.DisplayFor(model => model.Comments)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ContactNumber)</th>
                    <td>@Html.DisplayFor(model => model.ContactNumber)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Author)</th>
                    <td>@Html.DisplayFor(model => model.Author)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CreatedOn)</th>
                    <td>@Html.DisplayFor(model => model.CreatedOn)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ModifiedOn)</th>
                    <td>@Html.DisplayFor(model => model.ModifiedOn)</td>
                </tr>
            </tbody>
        </table>
        <br />
        <div class="col-md-offset-3" style="padding-left:50px">
            <form asp-action="Delete">
                <a type="button" asp-action="Index" class="btn btn-info-h btn-sm" style="width:180px">Назад</a>
                <input type="submit" value="Изтрий обявата" class="btn btn-alert-h btn-sm" />
            </form>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="col-md-6 details-real-estate-container paddingElement">

        @foreach (var image in Model.Images)
        {
            <img id="myImg" src="@image" class="myImages img-thumbnail img-h-block">
            <div id="myModal" class="modal">
                <!-- The Close Button -->
                <span class="close">&times;</span>
                <!-- Modal Content (The Image) -->
                <img class="modal-content" id="img01">
                <!-- Modal Caption (Image Text) -->
                <div id="caption"></div>
            </div>
        }
    </div>
</div>

@section Scripts{

    <script src="~/lib/assets/modal_images.js" asp-append-version="true"></script>
}

