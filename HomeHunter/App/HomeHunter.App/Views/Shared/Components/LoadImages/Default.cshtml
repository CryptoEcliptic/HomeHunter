@model HomeHunter.Models.ViewModels.Image.ImageLoadViewModel

<form method="post">
    <div class="container d-flex justify-content-around">
        @for (int i = 0; i < Model.DelitableImages.Count; i += 4)
        {
            <div class="products-row row d-flex justify-content-around my-5">
                @for (int j = i; j < i + 4; j++)
                {
                    if (j < Model.DelitableImages.Count)
                    {
                        <div class="product col-md-3">
                            <img src="@Model.DelitableImages[j].Url" class="img-thumbnail img-h-block" width="200" height="200" alt="ActionName" />
                            <div class="checkbox" style="padding-left:20px">
                                <input type="checkbox" id="remove" name="Remove" key="Remove" value="true" />
                                <i class="fa fa-trash-o fa-lg"></i>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="product col-md-2 empty">
                        </div>
                    }
                }
            </div>
        }
    </div>
    <div class="form-group d-flex justify-content-around">
        <a type="button" asp-action="Index" asp-controller="Offer" class="btn btn-info-h btn-sm" style="border-radius:5px; width:180px">Откажи</a>
        <input type="submit" value="Редактирай" class="btn btn-alert-h btn-sm" />
    </div>
</form>

